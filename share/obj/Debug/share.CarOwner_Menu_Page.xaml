<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="share.CarOwner_Menu_Page">
	<ContentPage.Content>
		
		<StackLayout>

			
			<Button Image="addUser.png" Clicked="Photo_Button_Clicked" WidthRequest="150" HeightRequest="150" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
			<Label Text="Lea" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Font="24" />

			<Button Text="訂單" Clicked="Go_To_History_Button_Clicked" TextColor="Black" BorderWidth="10" BorderRadius="10" BorderColor="Black" />
			<Button Text="錢包" Clicked="Money_Button_Clicked" TextColor="Black" BorderWidth="10" BorderRadius="10" BorderColor="Black" />
			<Button Text="車輛" Clicked="Add_Car_Button_Clicked" TextColor="Black" BorderWidth="10" BorderRadius="10" BorderColor="Black" />
			<Button Text="客服" Clicked="Service_Button_Clicked" TextColor="Black" BorderWidth="10" BorderRadius="10" BorderColor="Black" />
			<Button Text="設定" Clicked="Setting_Button_Clicked" TextColor="Black" BorderWidth="10" BorderRadius="10" BorderColor="Black" />
			<Button Text="切換為租車模式" Clicked="Switch_To_Customer_Mode_Button_Clicked" TextColor="Black" />
			

		</StackLayout>
		
	</ContentPage.Content>
</ContentPage>
